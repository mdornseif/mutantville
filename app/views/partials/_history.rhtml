<% for writing in writings %>
 <%= if writing.class.to_s == 'Story'
       link_to writing.title_or_text, :action => 'show_story', :storyid => writing 
     else
       link_to(writing.title_or_text, :action => 'show_story', :storyid => writing.story, "#comment" + writing.id.to_s => true)
     end %><br />
     <%= writing.createtime %> <br />
<% end %>